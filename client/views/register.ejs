<%- include('partials/header', { title: messages.title }) %>

<div class="registration-card">
  <h1><%= messages.title %></h1>
  <form id="registrationForm">

    <div class="form-group">
      <label for="email"><%= messages.emailLabel %></label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required
      >
    </div>

    <div class="form-group">
      <label for="password"><%= messages.passwordLabel %></label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required 
        minlength="6"
      >
    </div>

    <div class="form-group">
      <label for="confirmPassword"><%= messages.confirmPasswordLabel %></label>
      <input 
        type="password" 
        id="confirmPassword" 
        name="confirmPassword" 
        required 
        minlength="6"
      >
    </div>

    <button type="submit" id="submitBtn">
      <%= messages.registerButton %>
    </button>
  </form>

  <div id="message" class="message">
    <%= messages.messageDiv %>
  </div>
</div>

<script src="script.js"></script>

<%- include('partials/footer') %>
