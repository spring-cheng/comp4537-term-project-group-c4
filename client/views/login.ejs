<%- include('partials/header', { title: messages.loginTitle }) %>

<div class="registration-card">
  <h1><%= messages.loginTitle %></h1>
  <form id="loginForm">
    
    <div class="form-group">
      <label for="email"><%= messages.emailLabel %></label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required
      >
    </div>

    <div class="form-group">
      <label for="password"><%= messages.passwordLabel %></label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required 
        minlength="3"
      >
    </div>

    <button type="submit" id="loginBtn">
      <%= messages.loginButton %>
    </button>
  </form>

  <div id="message" class="message">
    <%= messages.messageDiv %>
  </div>
</div>

<script src="script.js"></script>

<%- include('partials/footer') %>
