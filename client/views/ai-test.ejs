<%- include('partials/header', { title: "Ethics Essay Generator" }) %>

<div class="admin-container">
    <div class="ethics-header">
        <h1 class="ethics-title" id="ai-test-title">Ethics Essay Generator</h1>
        <p class="ethics-subtitle">Explore ethical perspectives with AI-assisted analysis</p>
    </div>

    <section class="stats-section">
        <!-- API Usage Display -->
        <div id="apiUsage" class="api-usage-container">
            <h3 id="api-usage-title" class="api-usage-title">API Usage</h3>
            <p id="apiUsageText" class="api-usage-text">Loading...</p>
        </div>

        <!-- Warning Display -->
        <div id="warningContainer" class="warning-container">
            <p id="warningText" class="warning-text"></p>
        </div>

        <div class="form-group">
            <label for="prompt" id="prompt-label">Enter your ethical question or topic:</label>
            <textarea id="prompt" rows="4" placeholder="e.g., What are the ethical implications of artificial intelligence in healthcare?"></textarea>
        </div>

        <button id="generateBtn">Generate Essay</button>

        <div id="responseContainer" style="display: none;">
            <h3 id="response-label">Generated Essay:</h3>
            <div id="response"></div>
        </div>

        <div id="message" class="message"></div>
    </section>

    <button id="backBtn">Back to Dashboard</button>
</div>

<script type="module" src="ai-test.js"></script>

<%- include('partials/footer') %>
